package com.example.demo.configuration.web.bind.annotation;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.MessageSource;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.context.request.WebRequest;

import com.example.demo.configuration.exception.BaseException;
import com.example.demo.configuration.http.BaseResponse;

@ControllerAdvice
public class BaseControllerAdvice {
	
	@Autowired
	private MessageSource messageSource;
	
	private BaseResponse<?> handleBaseException(BaseException e, WebRequest requeset){
		return new BaseResponse<?>(e.getResponseCode(), messageSource.getMessage(e.getResponseCode().name(), null, null));
	}
}
